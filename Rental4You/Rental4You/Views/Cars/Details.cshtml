@model Rental4You.Models.Car

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<body>
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Car details <i class="ion-ios-arrow-forward"></i></span></p>
                    <h1 class="mb-3 bread">Car Details</h1>
                </div>
            </div>
        </div>
    </section>


    <section class="ftco-section ftco-car-details">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="car-details">
                        <div class="row">
                            @if (Directory.Exists("wwwroot\\uploads\\cars\\" + Model.Id))
                            {
                                List<string> imgPaths = new List<string>();
                                imgPaths = Directory.EnumerateFiles("wwwroot\\uploads\\cars\\" + Model.Id).ToList();
                                List<string> img = new List<string>();

                                foreach (var f in imgPaths)
                                {
                                    img.Add(f.Replace("wwwroot", ""));
                                }

                                if (img.Count > 5)
                                {
                                    foreach(var i in img){
                                        <div class="col-4" >
                                            <img src="@i" style="display: block;margin-left: auto;margin-right: auto; width: 100%; height: 100%; padding: 10px"/>
                                        </div>
                                    }
                                }
                                else
                                {
                                    foreach(var i in img){
                                        <div class="col">
                                            <img src="@i" style="display:block;margin-left: auto;margin-right: auto; width: 100%; height: 100%; padding: 10px"/>
                                        </div>
                                    }
                                }

                            }
                            else
                            {
                                <img class="img rounded" src="~/images/bg_2.jpg"/>
                            }
                        </div>
                        <div class="text text-center">
                            <span class="subheading"> @Html.Raw(Model.Maker)</span>
                            <h2>
                                @Html.Raw(Model.Model)
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
           <div class="row">
      		<div class="col-md d-flex align-self-stretch ftco-animate">
            <div class="media block-6 services">
              <div class="media-body py-md-4">
              	<div class="d-flex mb-3 align-items-center">
	              	<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-dashboard"></span></div>
	              	<div class="text">
		                <h3 class="heading mb-0 pl-3">
		                	Mileage
                            <span>@Html.Raw(Model.Km)</span>
		                </h3>
	                </div>
                </div>
              </div>
            </div>      
          </div>
          <div class="col-md d-flex align-self-stretch ftco-animate">
            <div class="media block-6 services">
              <div class="media-body py-md-4">
              	<div class="d-flex mb-3 align-items-center">
	              	<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-pistons"></span></div>
	              	<div class="text">
		                <h3 class="heading mb-0 pl-3">
		                	Transmission
                            <span>@Html.Raw(Model.Transmission)</span>
		                </h3>
	                </div>
                </div>
              </div>
            </div>      
          </div>
          <div class="col-md d-flex align-self-stretch ftco-animate">
            <div class="media block-6 services">
              <div class="media-body py-md-4">
              	<div class="d-flex mb-3 align-items-center">
	              	<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-car-seat"></span></div>
	              	<div class="text">
		                <h3 class="heading mb-0 pl-3">
		                	Seats
                            <span>@Html.Raw(Model.Seats)</span>
		                </h3>
	                </div>
                </div>
              </div>
            </div>      
          </div>
          <div class="col-md d-flex align-self-stretch ftco-animate">
            <div class="media block-6 services">
              <div class="media-body py-md-4">
              	<div class="d-flex mb-3 align-items-center">
	              	<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-diesel"></span></div>
	              	<div class="text">
		                <h3 class="heading mb-0 pl-3">
		                	Fuel
		                	<span>@Html.Raw(Model.fuel)</span>
		                </h3>
	                </div>
                </div>
              </div>
            </div>      
          </div>
      	</div>
      </div>
    </section>

    <div>
        <h3 class="heading mb-0 pl-3">
		    Company
		    <span>@Html.Raw(Model.CompanyId)</span>
		</h3>
    </div>

</body>
</html>
