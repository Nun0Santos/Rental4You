@model Rental4You.Models.Car

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="container" style="margin-left: 10px">
<form asp-action="Create" class="row" enctype="multipart/form-data">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Maker" class="control-label"></label>
                <input asp-for="Maker" class="form-control" />
                <span asp-validation-for="Maker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="sport"> Sports</option>
                    <option value="SUV">SUV</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Transmission" class="control-label"></label>
                <select asp-for="Transmission" class="form-control">
                    <option value="Automatic">Automatic</option>
                    <option value="Manual">Manual</option>
                </select>
                <span asp-validation-for="Transmission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Year" class="control-label"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LicensePlate" class="control-label"></label>
            <input asp-for="LicensePlate" class="form-control" />
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="control-label"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Km" class="control-label"></label>
            <input asp-for="Km" class="form-control" />
            <span asp-validation-for="Km" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="state" class="control-label"></label>
            <input asp-for="state" class="form-control" />
            <span asp-validation-for="state" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="price" class="control-label"></label>
            <input asp-for="price" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="fuel" class="control-label"></label>
            <select asp-for="fuel" class="form-control">
                    <option value="oil">Oil</option>
                    <option value="gas">Gas</option>
                    <option value="electric">Electric</option>
                    <option value="hybrid">Hybrid</option>
            </select>
            <span asp-validation-for="fuel" class="text-danger"></span>
        </div>
        <div>
            <label >Car images:</label>
            <input type="file" multiple accept=".png,.jpg,.jpeg,image/png,image/jpeg" class="form-control" name="files"/>
            <span  class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" style="margin-left: 15px">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    </form>
</div>

<div style="margin-left: 25px">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
