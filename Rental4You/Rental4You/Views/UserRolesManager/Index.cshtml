@model IEnumerable<Rental4You.ViewModels.UserRolesViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-left: 20px;">Users</h1>
<table class="table table-striped table-hover table-bordered">
	<thead>	
		<tr>
			<th>Username</th>
			<th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Active</th>
            <th>Roles</th>
            <th>Action</th>
		</tr>
	 </thead>
	 <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
				@item.UserName
            </td>
            <td>
               @item.UserId
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.isActive
            </td>
            <td>
                @string.Join(" , ", item.Roles.ToList())
            </td>
            <td>
                @if(item.isActive){
                    <a class="btn-warning btn" asp-action="ActivateUser" asp-controller="UserRolesManager" asp-route-userId="@item.UserId">Deactivate</a>
                }else{
                    <a class="btn-success btn" asp-action="ActivateUser" asp-controller="UserRolesManager" asp-route-userId="@item.UserId">Activate</a>
                }
                <a class="btn-primary btn" asp-action="Details" asp-controller="UserRolesManager" asp-route-userId="@item.UserId">Roles</a>
                <a class="btn-danger btn" asp-action="DeleteUser" asp-controller="UserRolesManager" asp-route-userId="@item.UserId">Delete</a>
            </td>
        </tr>
        }

	</tbody>
</table>
