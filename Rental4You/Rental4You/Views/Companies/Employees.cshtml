@model IEnumerable<Rental4You.Models.ApplicationUser>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<table class="table table-striped table-hover table-bordered" style="padding-left:10px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @if(!item.isActive){
                    <a asp-action="ActivateEmployees" asp-route-id="@item.Id" class="btn-warning btn">Activate</a>
                }else{
                    <a asp-action="ActivateEmployees" asp-route-id="@item.Id" class="btn-success btn">Deactivate</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
