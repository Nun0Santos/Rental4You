@model IEnumerable<Rental4You.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-left: 10px">Index</h1>

<p style="margin-left: 10px">
    <a asp-action="Create" class="btn-primary btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @if(item.isActive){
                    <a asp-action="Activate" asp-route-id="@item.Id" class="btn-warning btn">Deactivate</a>
                }else{
                    <a asp-action="Activate" asp-route-id="@item.Id" class="btn-success btn">Activate</a>
                }
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
